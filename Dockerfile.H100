FROM runpod/pytorch:2.2.0-py3.10-cuda12.1.1-devel-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive

WORKDIR /workspace

COPY . .

RUN apt-get update && apt-get install -y \
    git \
    wget \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --upgrade pip
RUN pip install -r requirements_H100.txt

RUN mkdir -p ~/miniconda3 && \
    wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh -O ~/miniconda3/miniconda.sh && \
    bash ~/miniconda3/miniconda.sh -b -u -p ~/miniconda3 && \
    rm -rf ~/miniconda3/miniconda.sh

RUN ~/miniconda3/bin/conda init bash

RUN ~/miniconda3/bin/conda create -n axolotl python=3.10 -y && \
    ~/miniconda3/bin/conda run -n axolotl pip install packaging torch ninja -v && \
    ~/miniconda3/bin/conda run -n axolotl pip install -e axolotl/[flash-attn,deepspeed] -v && \
    ~/miniconda3/bin/conda run -n axolotl pip install -r requirements_H100.txt

RUN ~/miniconda3/bin/conda create -n vllm python=3.10 -y && \
    ~/miniconda3/bin/conda run -n vllm pip install -e vllm/ -v && \
    ~/miniconda3/bin/conda run -n vllm pip install -r requirements_H100.txt

CMD ["python3", "script.py"]